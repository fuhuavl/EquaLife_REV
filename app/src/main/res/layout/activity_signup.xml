<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Purple Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/gradient_header"
            android:padding="32dp">

            <!-- App Title -->
            <TextView
                android:id="@+id/tvAppTitle"
                android:text="EquaLife"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:text="Organize Today,\nLive Better Tomorrow."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_below="@id/tvAppTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <!-- White Card Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:background="@drawable/rounded_top_card"
            android:padding="32dp"
            android:elevation="4dp">

            <!-- Sign Up Label -->
            <TextView
                android:text="Sign Up"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Email Label -->
            <TextView
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etSignupEmail"
                android:hint="Enter your email"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Password Label -->
            <TextView
                android:text="Password"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etSignupPassword"
                android:hint="Create a password"
                android:inputType="textPassword"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Confirm Password Label -->
            <TextView
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Confirm Password Input -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:hint="Re-enter your password"
                android:inputType="textPassword"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignupSubmit"
                android:text="Create Account"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:layout_marginTop="32dp"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="56dp" />

            <!-- Already have account Text -->
            <TextView
                android:id="@+id/tvGoLogin"
                android:text="Already have an account? Login"
                android:textSize="14sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Footer: Powered by SENOPATI -->
        <LinearLayout
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/imageViewSenopati"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:src="@drawable/senopati_logo"
                android:contentDescription="Senopati"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>