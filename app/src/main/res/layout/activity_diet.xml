<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_intro_background"
    android:padding="40dp">

    <TextView
        android:text="How's your eating habit?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnOption1"
        android:text="I usually don’t do breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_button_background"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnOption2"
        android:text="I only eat once or twice a day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnOption3"
        android:text="I don’t have specific preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnBack"
        android:text="‹ Back"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
